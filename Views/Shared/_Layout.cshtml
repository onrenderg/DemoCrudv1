<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
    <style>
        .custom-font {
            font-family: 'Roboto Slab', serif;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.25rem;
        }

        .logo-icon {
            background-color: #000;
            color: white;
            width: 35px;
            height: 35px;
            border-radius: 6px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin-right: 10px;
        }

        .navbar-nav .nav-link {
            color: #6c757d !important;
            margin: 0 10px;
            font-weight: 500;
        }

            .navbar-nav .nav-link.active {
                background-color: #0d6efd;
                color: white !important;
                border-radius: 6px;
                padding: 8px 16px !important;
            }

            .navbar-nav .nav-link:hover:not(.active) {
                color: #0d6efd !important;
            }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Modern Header Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <span class="logo-icon">U</span>
                serManagementCrudApp

            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/create">Create</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/read">Read</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/update">Update</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/delete">Delete</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content Area -->
    <div class="container flex-grow-1 py-5">
        @RenderBody()
        <!-- "This is where each view will inject its unique content." -->
    </div>

    <!-- Footer -->
    <footer class="container mt-auto mb-5">
        <small class="d-block text-center text-primary">&copy; 2025 UserManagementCrudApp</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>