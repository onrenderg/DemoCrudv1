
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
    <style>
        .custom-font {
            font-family: 'Roboto Slab', serif;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <header class="container my-5">
        <h1 class="text-center text-primary display-4 custom-font">UserManagementCrudApp</h1>
    </header>

    <nav class="container mb-4">
        <div class="row justify-content-center w-100">
            <div class="col-3 d-grid"><a href="/home/create" class="btn btn-primary">Create View</a></div>
            <div class="col-3 d-grid"><a href="/home/read" class="btn btn-primary">Read View</a></div>
            <div class="col-3 d-grid"><a href="/home/update" class="btn btn-primary">Update View</a></div>
            <div class="col-3 d-grid"><a href="/home/delete" class="btn btn-primary">Delete View</a></div>
        </div>
    </nav>

    <div class="container flex-grow-1 py-5">
        @RenderBody()
        <!-- “This is where each view will inject its unique content.” -->
    </div>

    <footer class="container mt-auto mb-5">
        <small class="d-block text-center text-primary">&copy; 2025 UserManagementCrudApp</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
