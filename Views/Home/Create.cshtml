@model UserManagementCrudApp.Models.User

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <style>
        .custom-font {
            font-family: 'Roboto Slab', serif;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- H1 title section -->
    <div class="container mb-5 mt-5">
        <h1 class="text-center text-primary display-4 custom-font">Create View</h1>
    </div>

    <!-- Navigation buttons -->
    <nav class="container">
        <div class="row justify-content-center w-100">
            <div class="col-3 d-grid">
                <a href="/home/create" class="btn btn-primary">Create View</a>
            </div>
            <div class="col-3 d-grid">
                <a href="/home/read" class="btn btn-primary">Read View</a>
            </div>
            <div class="col-3 d-grid">
                <a href="home/udate" class="btn btn-primary">Update View</a>
            </div>
            <div class="col-3 d-grid">
                <a href="/home/delete" class="btn btn-primary">Delete View</a>
            </div>
        </div>
    </nav>

    <!-- Form Content -->
    <div class="container flex-grow-1 py-5">
        <h2 class="mb-4">Create User</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                <label class="form-label">Phone Number</label>
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-success">Create</button>
        }
    </div>

    <!-- Footer -->
    <footer class="container mt-auto mb-5">
        <small class="d-block text-center text-primary">&copy; 2025 UserManagementCrudApp</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
