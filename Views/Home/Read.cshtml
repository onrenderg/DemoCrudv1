@model List<UserManagementCrudApp.Models.User>

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <style>
        .custom-font {
            font-family: 'Roboto Slab', serif;
        }

        table {
            width: 100%;
        }

            table input[type="text"], table input[type="email"] {
                width: 100%;
            }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- H1 title section -->
    <div class="container mb-5 mt-5">
        <h1 class="text-center text-primary display-4 custom-font">Read View</h1>
    </div>

    <!-- Navigation buttons -->
    <nav class="container">
        <div class="row justify-content-center w-100 mb-4">
            <div class="col-3 d-grid">
                <a href="/home/create" class="btn btn-primary">Create View</a>
            </div>
            <div class="col-3 d-grid">
                <a href="/home/read" class="btn btn-primary">Read View</a>
            </div>
            <div class="col-3 d-grid">
                <a href="/home/update" class="btn btn-primary">Update View</a>
            </div>
            <div class="col-3 d-grid">
                <a href="/home/delete" class="btn btn-primary">Delete View</a>
            </div>
        </div>
    </nav>

    <!-- Content section -->
    <div class="container flex-grow-1 py-5">
        <h2 class="mb-4">Update Users</h2>

        @using (Html.BeginForm("Update", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <input type="submit" name="load" value="Load Users" class="btn btn-secondary mb-4" />
        }

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped align-middle text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                @using (Html.BeginForm("UpdateOperation", "Home", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("Id", user.Id)
                                    <td>
                                        <input name="Name" class="form-control" value="@user.Name" />
                                    </td>
                                    <td>
                                        <input name="Email" type="email" class="form-control" value="@user.Email" />
                                    </td>
                                    <td>
                                        <input name="PhoneNumber" class="form-control" value="@user.PhoneNumber" />
                                    </td>
                                    <td>
                                        <input type="submit" value="Update" class="btn btn-success" />
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <!-- Footer -->
    <footer class="container mt-auto mb-5">
        <small class="d-block text-center text-primary">&copy; 2025 UserManagementCrudApp</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
